

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="form-inputs">
  <div class="lo_login">    Welcome</img></div>
  <!--<img class="logo" src="/assets/logo.png" alt="auclubinfo">-->
  <div>
        <div><%= f.input :email, required: false, autofocus: true, label: false, placeholder: "  User email" %>
             <%= f.input :password, required: false, label: false, placeholder: "  Password"%>
        </div>
        <div><label><%= f.input :remember_me, :class => "hvr-underline-reveal", as: :boolean if devise_mapping.rememberable? %></label></div>
        <div class="form-actions"><%= f.button :submit,  "Login", :class => "btn btn-primary bu_login" %></div>
        <!--<%#- if devise_mapping.registerable? && controller_name != 'registrations' %>-->
        <!--<%#= link_to "회원가입", new_registration_path(resource_name),:class => "btn btn-primary " %><br />-->
        <!--<#%end -%>-->
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "비밀번호 찾기", new_password_path(resource_name), :class => "log_pas" %><br />
        <% end -%>
  </div>
</div>
<% end %>
